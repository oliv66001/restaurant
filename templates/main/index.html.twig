{% extends 'base.html.twig' %}

{% block title %}Accueil | Le Quai-Antique
{% endblock %}


{% block body %}
	
	<img class="img-fluid" id="front" src="{{ asset('assets/images/le bar1.jpg') }}" alt="Le bar du restaurant">

<main class="container">
<section class="row justify-content-center">
	<div class="col-12">
	
		<h1 class="text-center mt-4">Le Quai-Antique</h1>
	</div>
<hr>

	{% for category in categories %}
		{% if category.parent == null %}
			<div class="col-12">
				<h3 class="text-center mt-10">{{ category.name }}</h3>
			</div>
		{% else %}
			<div class="col-lg-6 col-md-6 col-sm-10 mb-3 ">
			<div class="card-container">
			
				<article class="card h-100 mb-6">
					<div class="card-body">
						{% set categoryImageFound = false %}
						{% for dishe in dishes %}
							{% if dishe.categories.id == category.id and not categoryImageFound %}
								{% if dishe.images[0] is defined %}
									<img src="{{ asset('assets/uploads/dishes/mini/300x300-' ~ dishe.images[0].name ) }}" class="card-img-top" alt="{{ dishe.name }}">
								{% else %}
									<img src="{{ asset('assets/images/Orange et Bordeaux Restaurant Logo.png') }}" class="card-img-top" alt="{{ dishe.name }}">
								{% endif %}
								{% set categoryImageFound = true %}
							{% endif %}
						{% endfor %}
                        <div class="col-12 text-center">
						<h3 class="card-title mt-5 mb-0">{{ category.name }}</h3>
						<a  href="{{ path('app_categories_list', {slug: category.slug}) }}" class="btn btn mt-3">Voir le détails</a>
						{% if app.user %}
							<a type="button" href="{{ path('app_calendar_new') }}" class="btn btn mt-3">Réserver</a>
						{% else %}
							<p>Connectez-vous pour réserver</p>
							<a type="button" href="{{ path('app_login') }}" class="btn mt-3">Connexion</a>
							<a type="button" href="{{ path('app_register') }}" class="btn mt-3">S'inscrire</a>
						{% endif %}
                        </div>
					</div>
				</article>
				
				</div>
			</div>
		{% endif %}
	{% endfor %}
</section>
</main>
<img class="img-fluid" src="{{ asset('assets/images/salle restaurant2.jpg') }}"  alt="La salle blanche">

{% endblock %}
