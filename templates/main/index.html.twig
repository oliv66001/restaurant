    {% extends 'base.html.twig' %}

{% block title %}Accueil | Le Quai-Antique
{% endblock %}

{% block body %}
<article class="container text-center">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-lg-6 col-sm-12">
	<img class="logo" src="{{ asset('assets/images/Orange et Bordeaux Restaurant Logo.png') }}" alt="logo">
		<h1>Le Quai-Antique</h1>
	 <h2>Découvrez</br> notre cuisine</br> modèrne</h2>
    </div>
    <div class="col-lg-6 col-sm-12">
      {#<img class="img-fluid rounded" src={{ dishes.images }}>#}
    </div>
  </div>
</article>
<hr>
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Le Quai-Antique</h1>
			</div>

			  {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2 class="text-center mt-10">{{ category.name }}</h2>
                    </div>
                {% else %}
                    <div class="col-6 mb-3">
                        <div class="card h-100 mb-6">
                            <div class="card-body">
							{#<img src="{{ asset('assets/uploads/dishes/mini/300x300-' ~ dishe.images[0].name ) }}" class="card-img-top" alt="{{ dishe.name }}">#}
                                <h3 class="card-title mt-5 mb-0">{{ category.name }}</h3>
                                <a href="{{ path('app_categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
                            </div>
                        </div>
                    </div>    
                {% endif %}
            {% endfor %}
        </section>
    </main>
{% endblock %}