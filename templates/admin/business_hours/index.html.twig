{% extends 'base.html.twig' %}

{% block title %}Horaires d'ouverture
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% include "_partials/_adminnav.html.twig" %}
			<div class="col-lg-12 col-md-12 col-sm-12">
				<h1 class="text-center">Horaires d'ouverture</h1>
				<div class="table-responsive">
					<table class="table">
						<thead class="thead-dark">
							<tr class="text-center">
								<th class="align-middle">Jour</th>
								<th class="align-middle">Ouvert de</th>
								<th class="align-middle">à</th>
								<th class="align-middle">Ouvert de</th>
								<th class="align-middle">à</th>
								<th class="align-middle">ouvert/fermé</th>
								<th class="align-middle">actions</th>
							</tr>
						</thead>
						<tbody>
							{% for hour in hours %}
								
									<tr>
										<td class="align-middle">{{ hour.getDayName }}</td>
										<td class="align-middle">{{ hour.openTime|date('H:i') }}</td>
										<td class="align-middle">{{ hour.closeTime|date('H:i') }}</td>
										<td class="align-middle">{{ hour.openTimeEvening|date('H:i') }}</td>
										<td class="align-middle">{{ hour.closeTimeEvening|date('H:i') }}</td>

										<td class="align-middle">

											<div class="form-check form-switch">

												<input class="form-check-input" type="checkbox" role="switch" id="switch" {{ hour.closed ? "checked" : "" }} disabled>
												<label class="form-check-label" for="switch">{{ hour.closed }}</label>
											</div>
										</td>


										<td class="align-middle">
											<a class="btn btn3" href="{{ path('admin_business_hours_edit', {'id': hour.id}) }}">Modifier</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
