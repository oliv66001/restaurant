<section class="container">
	<div class="row justify-content-center">
		<div class="col">
			{{ form_start(menuForm) }}
			<div class="form-group text-center">
				{{ form_label(menuForm.name, "Nom du menu", {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(menuForm.name, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(menuForm.name) }}
			</div>
			<div class="form-group text-center">
				{{ form_label(menuForm.description, "Description du menu", {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(menuForm.description, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(menuForm.description) }}
			</div>
			<div class="form-group text-center">
				{{ form_label(menuForm.price, "Prix du menu", {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(menuForm.price, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(menuForm.price) }}
			</div>
			<div class="form-group text-center">
    {{ form_label(menuForm.dishes, "Plats inclus dans le menu", {'label_attr': {'class': 'form-label'}}) }}
    <div class="row">
        {% for category, dishes in groupedDishes %}
            <div class="col-md-12">
                <h4>{{ category }}</h4>
            </div>
            {% for dish in dishes %}
                <div class="col-md-4">
                    <div class="form-check">
                        {{ form_widget(menuForm.dishes[dish.id], {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(menuForm.dishes[dish.id]) }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    {{ form_errors(menuForm.dishes) }}
</div>


			<button type="submit" class="btn btn text-center mb-5">Valider</button>
			{{ form_end(menuForm) }}
		</div>
	</div>
</section>
