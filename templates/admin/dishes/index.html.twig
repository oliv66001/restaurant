{% extends 'base.html.twig' %}

{% block title %}
	Liste des plats
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">

			{% include "_partials/_adminnav.html.twig" %}
			<main class="col-12 ">
				<h1 class="text-center">Liste des plats</h1>
				<table class="table">
					<thead>
						<tr class="text-center">
							<th>Image</th>
							<th>Nom</th>
							<th>Prix en €</th>
							<th>Catégorie</th>
							<th>Actions</th>
						</tr>
					</thead>
					{% for dishe in dishes %}
						<tr class="text-center">


							<td> {% if dishe.images|length > 0 %}
                                    <img src="{{ asset('assets/uploads/dishes/mini/300x300-' ~ dishe.images[0].name ) }}" alt="{{ dishe.name }}" class="img-thumbnail">
                                {% else %}
                                    <img src="{{ asset('assets/images/Orange et Bordeaux Restaurant Logo.png') }}" width:'300px' height:'300px' alt="Image par défaut" class="img-thumbnail">
                                {% endif %}</td>

							<td class="align-middle">{{ dishe.name }}</td>
							<td class="align-middle">{{ dishe.price }}€</td>
							<td class="align-middle">{{ dishe.categories.name }}</td>
							<td class="align-middle">
								<a href="{{ path('admin_dishes_edit', {'id': dishe.id}) }}" class="btn btn2">Modifier</a>
								
							</td>
						
						</tr>

					{% endfor %}
				
				</table>
				<div class="text-center">
					<a href="{{ path('admin_dishes_add') }}" class="btn btn">Ajouter</a>
				</div>
			</main>
		</div>
	</div>
{% endblock %}
