{% extends "base.html.twig" %}

{% block title %}Le Quai-Antique | {{ menu.name }}
{% endblock %}

{% block body %}
<article class="container-fluid text-center">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-sm-12">

            <section class="container-fluid" id="menu">
                <div>
                    <h1> {{ menu.name }}</h1>
                </div>

              {% for sortedMenu in sortedMenus %}
            {% if sortedMenu.menu.id == menu.id %}
                {% for sortedDish in sortedMenu.sortedDishes %}
                    <div class="row justify-content-center">
                        <div class="col-lg-12 col-sm-12 px-20">
                            <h3>{{ sortedDish.name }}</h3>
                            <p class="text-center px-50">{{ sortedDish.description }}</p>
                            <p class="price">{{ sortedDish.price }}€</p>
                        </div>
                    </div>
                {% endfor %}
                {% endif %}
                {% endfor %}
                {#{% include "_partials/_pagination.html.twig" with {
                    'menu_index': 'menu_show',
                    'currentPage': 1,
                    'totalPages': totalPages,
                } %}#}
               
                {% if app.user %}
                    <div class="nav-item">
                        <a class="btn btn mt-3" href="{{ path('app_calendar_new') }}">Réserver</a>
                       
                    </div>
                    <div class="nav-item">
                      <a class="btn btn2 mt-3" href="{{ path('menu_index') }}">Retour</a>
                    </div>
                {% else %}
                    <div class="nav-item">
                        <a class="btn btn mt-3" href=" {{ path('app_login') }}">Me connecter</a>
                    </div>
                    <div class="nav-item">
                        <a class="btn btn3 mt-3" href="{{ path('app_register') }}">M'inscrire</a>
                    </div>
                      <div class="nav-item">
                      <a class="btn btn mt-3" href="{{ path('menu_index') }}">Retour</a>
                    </div>
                   
                {% endif %}
               
            </section>
        </div>
    </div>
</article>
{% endblock %}
