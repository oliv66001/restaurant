{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
<article class="container text-center">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-12">
	<img class="logo" src="{{ asset('assets/images/Orange et Bordeaux Restaurant Logo.png') }}" alt="logo">
		<h1>Le chemin Fermier</h1>
	 <h2>Découvrez</br> notre cuisine</br> modèrne</h2>
    </div>
    
  </div>
</article>
<hr>
	<section class="container text-center">
		<div class="row justify-content-center">
			<div class="col-md-4">
				
				{{ form_start(registrationForm) }}
                <h1>Inscription</h1>
				<fieldset class="mb-3">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>

				<fieldset class="mb-3">
					<legend>Mes infos</legend>
					{{ form_row(registrationForm.phone) }}
					{{ form_row(registrationForm.allergie) }}
				</fieldset>
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'}) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-lg my-3">M'inscrire</button>
				<a href=" {{ path('app_login')}} " class="btn btn-lg btn2 my-3">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>

	</section>


{% endblock %}
