{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
<article class="container text-center">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-12">
	<img class="logo" src="{{ asset('assets/images/Orange et Bordeaux Restaurant Logo.png') }}" alt="logo">
		<h1>Le chemin Fermier</h1>
	 <h3>Découvrez</br> notre cuisine</br> modèrne</h3>
    </div>
    
  </div>
</article>
<hr>
	<section class="container text-center">
		<div class="row justify-content-center">
			<div class="col-lg-9 col-md-6">
				
				{{ form_start(registrationForm) }}
                <h1>Inscription</h1>
				<fieldset class="mb-3">
					<legend>Mon identité</legend>
					<div class="row">
						<div class="col-6">
							{{ form_row(registrationForm.lastname) }}
						</div>
						<div class="col-6">
							{{ form_row(registrationForm.firstname) }}
						</div>
					</div>
					{{ form_row(registrationForm.email) }}
				</fieldset>

				<fieldset class="mb-3">
					<legend>Mes infos</legend>
					
					<div class="row">
					<div class="col-6">
					{{ form_row(registrationForm.phone) }}
					</div>
					<div class="col-6">
					{{ form_row(registrationForm.allergie) }}
					</div>
					</div>
				</fieldset>
				</div>
				
					<div class="col-6">
					{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'}) }}
					</div>
					<div class="col-6">
						{{ form_row(registrationForm.RGPDConsent) }}
					</div>
				
			

				<button type="submit" class="btn btn-lg my-3">M'inscrire</button>
				<a href=" {{ path('app_login')}} " class="btn btn-lg btn2 my-3">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>

	</section>


{% endblock %}
