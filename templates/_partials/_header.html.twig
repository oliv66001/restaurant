<article class="container text-center" style="padding-top:80px">
	<div class="row h-100 justify-content-center align-items-center">
		<div class="col-lg-6 col-sm-12">
			<img class="logo" src="{{ asset('assets/images/OrangeetBordeauxRestaurantLogo.png') }}" alt="logo">
			<h1>Le Quai-Antique</h1>
			<h3 class="titre2">Découvrez</br>
			notre cuisine</br>
		moderne</h3>
</div>
<div class="col-lg-6 col-sm-12">
	<div id="carouselExampleControls" class="carousel slide carousel-shadow" data-bs-ride="carousel">
		<div class="carousel-inner front-caroussel">
			{% set firstImageShown = false %}
			{% for category in category|default([]) %}
				{% if category.name != 'Images d\'accueil' and category.name != 'Top image' and category.name != 'Bottom image' %}
                    {% for dishe in category.dishes %}
                        {% if dishe.images|length > 0 %}
                            <div class="carousel-item{% if not firstImageShown %} active{% endif %}">
                                <img src="{{ asset('assets/uploads/dishes/mini/300x300-') ~ dishe.images[0].name }}" class="d-block img-fluid rounded" alt="{{ dishe.name }}" title="{{ dishe.name }}">
                            </div>
                            {% if not firstImageShown %}
                                {% set firstImageShown = true %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {% if not firstImageShown %}
                <div class="carousel-item active">
                    <img src="{{ asset('assets/images/coupe de champagne.png') }}" class="d-block img-fluid rounded" alt="Image par défaut" title="Image par défaut">
                </div>
            {% endif %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div></div></article><hr>
{% if not is_granted('ROLE_DISHES_ADMIN') %}
<div class="text-center">
	{% if app.user %}
		<a type="button" href="{{ path('app_calendar_new') }}" class="btn btn mt-3">Réserver</a>
	{% else %}
		<h3>Connectez-vous pour réserver</h3>
		<a type="button" href="{{ path('app_login') }}" class="btn mt-3">Se connecter</a>
		<a type="button" href="{{ path('app_register') }}" class="btn mt-3">S'inscrire</a>
	{% endif %}
				</div>
{% endif %}
				<hr>
