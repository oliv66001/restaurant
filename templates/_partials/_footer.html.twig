{% if not is_granted('ROLE_DISHES_ADMIN') %}
	<section class="container mt-5">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<hr>
				<h3 class="text-center">Horaires d'ouverture :</h3>
				<div class="table-responsive">
					<table class="table">
						<thead class="thead-dark">
							<tr class="text-center">
								<th>Jour</th>
								<th>Heures Midi</th>
								<th>Heures Soir</th>
							</tr>
						</thead>
						{% set days = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'] %}

						<tbody>
							{% for hour in opening_hours %}
								<tr>
									<td class="align-middle">{{ days[hour.getDay] }}</td>
									<td class="align-middle">
										{% if hour.closed %}Fermé
										{% else %}
											{{ hour.openTime.format('H:i') }}
											<!-- Remarquez l'utilisation de la méthode format -->
											-
											{{ hour.closeTime.format('H:i') }}
											<!-- Remarquez l'utilisation de la méthode format -->
										{% endif %}
									</td>
									<td class="align-middle">
										{% if hour.closed %}Fermé
										{% else %}
											{{ hour.openTimeEvening.format('H:i') }}
											<!-- Remarquez l'utilisation de la méthode format -->
											-
											{{ hour.closeTimeEvening.format('H:i') }}
											<!-- Remarquez l'utilisation de la méthode format -->
										{% endif %}
									</td>
								</tr>
							{% endfor %}
						</tbody>

					</table>
				</div>
				<hr>
				<div class="text-center">
					{% if app.user %}
						<a type="button" href="{{ path('app_calendar_new') }}" class="btn btn mt-3">Réserver</a>
					{% else %}
						<h3>Connectez-vous pour réserver</h3>
						<a type="button" href="{{ path('app_login') }}" class="btn mt-3">Connexion</a>
						<a type="button" href="{{ path('app_register') }}" class="btn mt-3">S'inscrire</a>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endif %}

