{% extends "base.html.twig" %}

{% block title %}La carte | Le Quai-Antique
{% endblock %}

{% block body %}
	<article class="container-fluid text-center">
		<div class="row justify-content-center">
			<div class="col-lg-12 col-sm-12">

				<section class="container" id="carte">
					<div>
						<h1>Carte du restaurant<br/>
							Le Quai-Antique</h1>
					</div>
					<div>
						<a class="btn btn4 mb-4" href="{{ path('menu_index', {page: 1}) }}">Voir les menus</a>


					</div>
					<div class="mt-4 mb-4">
						{% set last_category = "" %}
						{% for category in category %}
							{% if category.name != 'Top image' and category.name != 'Bottom image' %}
								{% for dishes in category.dishes %}
									{% if dishes.images %}
										{% if category.name != last_category %}
											<div class="row justify-content-center borderTitre mb-4">
												<div class="col-6">
													<h2>Les
														{{ category.name }}</h2>
												</div>
											</div>
											{% set last_category = category.name %}
										{% endif %}
										<div class="row justify-content-center">
											<div class="col-6 px-20">
												<h3>{{ dishes.name }}</h3>

												<p class="text-center px-50">{{ dishes.description }}</p>
												<p class="price">{{ dishes.price }}
													€</p>
											</div>
										</div>
									{% endif %}
								{% endfor %}
							{% endif %}
						{% endfor %}
					</div>
					<div></div>
					{% if app.user %}
						<div class="nav-item">
							<a class="btn btn2 mt-3" href="{{ path('app_calendar_new') }}">Réserver</a>
						</div>
					{% else %}
						<div class="nav-item">
							<a class="btn btn mt-3" href=" {{ path('app_login') }}">Me connecter</a>
						</div>
						<div class="nav-item">
							<a class="btn btn3 mt-3" href="{{ path('app_register') }}">M'inscrire</a>
						</div>

					{% endif %}
					<div class="nav-item">
						<a class="btn btn4 mb-4 mt-4" href="{{ path('menu_index', {page: 1}) }}">Voir les menus</a>
					</div>
				</section>
			</div>
		</div>
	</article>
{% endblock %}
